<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/settingsItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:text="@string/login"
            android:textColor="#000"
            android:visibility="gone"
            app:icon="@drawable/ic_settings_login"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#000"
            app:rippleColor="@color/secondaryLightColor"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:text="@string/logout"
            android:textColor="#000"
            android:visibility="gone"
            app:icon="@drawable/ic_settings_logout"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#000"
            app:rippleColor="@color/secondaryLightColor"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchThemeButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:text="@string/switch_theme"
            android:textColor="#000"
            app:icon="@drawable/ic_settings_switch_theme"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#000"
            app:rippleColor="@color/secondaryLightColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/devSettingsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:text="@string/dev_settings_button"
            android:textColor="#000"
            app:icon="@drawable/ic_settings_dev"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#000"
            app:rippleColor="@color/secondaryLightColor" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>