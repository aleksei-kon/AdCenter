<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/settingsItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginButton"
            style="@style/SecondaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_login"
            android:drawablePadding="2dp"
            android:text="@string/login"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/logoutButton"
            style="@style/SecondaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_logout"
            android:drawablePadding="2dp"
            android:text="@string/logout"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/switchThemeButton"
            style="@style/SecondaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_switch_theme"
            android:drawablePadding="2dp"
            android:text="@string/switch_theme" />

        <TextView
            android:id="@+id/devSettingsButton"
            style="@style/SecondaryButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu_dev"
            android:drawablePadding="2dp"
            android:text="@string/dev_settings_button" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>