<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#005085</item>
        <item name="colorPrimaryDark">#003957</item>
        <item name="colorAccent">#FFD545</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="backgroundColor" format="color">@color/white</item>
        <item name="toolbarBackgroundColor" format="color">@color/darkBlue</item>
        <item name="toolbarContentColor" format="color">@color/white</item>
        <item name="bottomNavSelectedItemColor" format="color">@color/darkBlue</item>
        <item name="bottomNavItemColor" format="color">@color/skyBlue</item>
        <item name="bottomNavBackgroundColor" format="color">@color/darkWhite1</item>
        <item name="progressColor" format="color">#FFD545</item>
        <item name="titleColor" format="color">@color/black</item>
        <item name="textColor" format="color">@color/black</item>
        <item name="mainTextColor" format="color">@color/blue</item>
        <item name="subTextColor" format="color">@color/grey1</item>
        <item name="iconColor" format="color">@color/darkBlue</item>
    </style>

    <!-- Application dark theme. -->
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightBlack</item>
        <item name="colorPrimaryDark">@color/lightBlack</item>
        <item name="colorAccent">@color/darkBlue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="backgroundColor" format="color">@color/darkGrey1</item>
        <item name="toolbarBackgroundColor" format="color">@color/lightBlack</item>
        <item name="toolbarContentColor" format="color">@color/white</item>
        <item name="bottomNavSelectedItemColor" format="color">@color/grey3</item>
        <item name="bottomNavItemColor" format="color">@color/lightGrey2</item>
        <item name="bottomNavBackgroundColor" format="color">@color/darkGrey2</item>
        <item name="progressColor" format="color">@color/greyBlue</item>
        <item name="titleColor" format="color">@color/darkWhite1</item>
        <item name="textColor" format="color">@color/darkWhite2</item>
        <item name="mainTextColor" format="color">@color/lightBlue2</item>
        <item name="subTextColor" format="color">@color/lightGrey4</item>
        <item name="iconColor" format="color">@color/grey3</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColorCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/toolbarContentColor</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColorExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/toolbarContentColor</item>
    </style>

</resources>
