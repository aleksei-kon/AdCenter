<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:colorEdgeEffect">@color/secondaryLightColor</item>

        <item name="bgColor">@color/primaryColor</item>
        <item name="toolbarBgColor">@color/primaryColor</item>
        <item name="bottomAppBarBgColor">@color/primaryColor</item>
        <item name="bottomSheetBgColor">@color/primaryColor</item>
        <item name="toolbarTitleColor">@color/primaryTextColor</item>
        <item name="toolbarIconColor">@color/primaryTextColor</item>
        <item name="textColor">@color/primaryTextColor</item>
        <item name="subtextColor">@color/primarySubtextColor</item>
        <item name="fabBgColor">@color/secondaryColor</item>
        <item name="fabIconColor">@color/primaryTextColor</item>
        <item name="iconColor">@color/primaryTextColor</item>
        <item name="rippleMainColor">@color/secondaryColor</item>
        <item name="rippleLightColor">@color/secondaryLightColor</item>
        <item name="buttonStrokeColor">@color/secondaryColor</item>
        <item name="buttonOutlineTextColor">@color/secondaryColor</item>
        <item name="buttonContainedTextColor">@color/primaryColor</item>
    </style>

    <!-- Application dark theme. -->
    <style name="AppDarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:colorEdgeEffect">@color/secondaryLightColor</item>

        <item name="bgColor">@color/primarySubtextColor</item>
        <item name="toolbarBgColor">@color/primarySubtextColor</item>
        <item name="bottomAppBarBgColor">@color/primarySubtextColor</item>
        <item name="bottomSheetBgColor">@color/primarySubtextColor</item>
        <item name="toolbarTitleColor">@color/primaryColor</item>
        <item name="toolbarIconColor">@color/primaryColor</item>
        <item name="textColor">@color/primaryColor</item>
        <item name="subtextColor">@color/primaryColor</item>
        <item name="fabBgColor">@color/secondaryColor</item>
        <item name="fabIconColor">@color/primaryColor</item>
        <item name="iconColor">@color/primaryColor</item>
        <item name="rippleMainColor">@color/secondaryColor</item>
        <item name="rippleLightColor">@color/secondaryLightColor</item>
        <item name="buttonStrokeColor">@color/secondaryColor</item>
        <item name="buttonOutlineTextColor">@color/secondaryColor</item>
        <item name="buttonContainedTextColor">@color/primaryColor</item>
    </style>

    <style name="ButtonOutline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:textColor">?attr/buttonOutlineTextColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">?attr/rippleLightColor</item>
        <item name="strokeColor">?attr/buttonStrokeColor</item>
    </style>

    <style name="ButtonContained" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:textColor">?attr/buttonContainedTextColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">?attr/rippleLightColor</item>
        <item name="elevation">0dp</item>
        <item name="backgroundTint">?attr/fabBgColor</item>
    </style>

    <style name="OutlineInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grayColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxStrokeColor">@color/secondaryColor</item>
        <item name="endIconTint">@color/secondaryColor</item>
        <item name="hintTextColor">@color/secondaryColor</item>
        <item name="passwordToggleTint">@color/secondaryColor</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

</resources>
